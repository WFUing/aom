    "license": "MIT",
    "publisher": "WFUing",
    "type": "module",
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "build": "tsc -b tsconfig.json",
        "build:worker": "esbuild --minify ./out/language-server/server.browser.js --bundle --format=iife --outfile=./public/aom-server-worker.js --platform=node",
        "build:web": "npm run build && npm run prepare:public && npm run build:worker && node scripts/copy-monaco-assets.mjs",
        "serve": "node ./out/web/app.js",
        "prepare:public": "node scripts/prepare-public.mjs"
    },
    "dependencies": {
        "colors": "^1.4.0",
        "commander": "^8.0.0",
        "langium": "~2.0.2",
        "monaco-editor-comp": "~1.6.0",
        "vscode-languageclient": "~8.0.2",
        "vscode-languageserver": "~8.0.2",
        "chalk": "~5.3.0",
        "js-yaml": "^4.1.0",
        "monaco-editor": ">=0.44.0",
        "node": "^21.2.0",
        "shelljs": "^0.8.5",
        "terraform-generator": "6.1.0",
        "vscode-languageserver-types": "^3.17.5",
        "vscode-uri": "^3.0.7",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@types/node": "~16.18.11",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^5.61.0",
        "@typescript-eslint/parser": "^5.61.0",
        "@vscode/vsce": "^2.21.0",
        "esbuild": "^0.18.20",
        "eslint": "^8.44.0",
        "langium-cli": "~2.0.1",
        "monaco-editor-workers": "0.39.0",
        "monaco-editor-wrapper": "3.1.0",
        "shx": "^0.3.4",
        "typescript": "~5.1.6",
        "@codingame/monaco-vscode-api": "1.83.16",
        "husky": "^8.0.0",
        "js-yaml": "^4.1.0",
        "ts-loader": "^9.5.1",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}