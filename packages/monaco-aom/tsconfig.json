{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "out",
    "target": "ES2019",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "rootDir": "./src",
    "lib": [
      "WebWorker",
      "ESNext",
      "DOM"
    ],
    "paths": {
      "langium": [
        "./node_modules/langium/lib"
      ],
      "langium/node": [
        "./node_modules/langium/lib/node"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "out",
    "public",
    "node_modules"
  ]
}