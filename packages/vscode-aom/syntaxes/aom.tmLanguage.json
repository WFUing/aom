{
  "name": "aom",
  "scopeName": "source.aom",
  "fileTypes": [
    ".aom"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.aom",
      "match": "\\b([aA][pP][pP][dD][eE][fF]|[cC][oO][mM][pP][dD][eE][fF]|[cC][oO][mM][pP][oO][nN][eE][nN][tT]|[pP][oO][lL][iI][cC][yY]|[sS][eE][cC][rR][eE][tT][dD][eE][fF]|[wW][oO][rR][kK][fF][lL][oO][wW]|[iI][mM][pP][oO][rR][tT])\\b"
    },
    {
      "name": "string.quoted.double.aom",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.single.aom",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.aom",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.aom"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.aom"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.aom"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.aom"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.aom",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
